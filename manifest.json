{
  "manifest_version": 2,
  "name": "AutoDownloadZerochan",
  "version": "2.2",
  "permissions": [
    "downloads",
    "storage"
  ],
  "background": {
    "scripts": [
      "app/background.js"
    ]
  },
  "icons": {
    "16": "app/images/icon.png",
    "48": "app/images/icon.png",
    "128": "app/images/icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.zerochan.net/*",
        "http://www.zerochan.net/*"
      ],
      "js": [
        "app/script.js"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "app/views/popup.html"
  }
}